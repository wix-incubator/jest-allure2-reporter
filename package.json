{
  "name": "@wix/jest-allure2-reporter-monorepo",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "allure",
    "allure2",
    "jest",
    "jest-reporter",
    "reporter"
  ],
  "repository": {
    "url": "github:wix-incubator/jest-allure2-reporter"
  },
  "workspaces": [
    "packages/*",
    "packages/presets/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "lerna clean",
    "build": "lerna run build",
    "docs": "lerna run docs --scope=jest-allure2-reporter",
    "start": "lerna run start --scope=jest-allure2-reporter",
    "lint": "lerna run lint",
    "lint:ci": "lerna run lint:ci",
    "lint:staged": "lerna run lint:staged",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "lerna": "^6.6.2"
  },
  "jest": {
    "testPathIgnorePatterns": [".*"]
  }
}
