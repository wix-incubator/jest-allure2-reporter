{
  "name": "jest-allure2-reporter",
  "version": "1.0.0",
  "description": "TODO: describe reporter",
  "license": "MIT",
  "keywords": [
    "allure",
    "allure2",
    "jest",
    "jest-reporter",
    "reporter"
  ],
  "authors": [
    "Yaroslav Serhieiev <yaroslavs@wix.com>"
  ],
  "repository": {
    "url": "github:wix-incubator/jest-allure2-reporter"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install && npm run build",
    "build": "tsc",
    "docs": "typedoc && cp -r media website",
    "website": "http-server -p 3000 website",
    "fixture:results": "npx jest --config=fixture-results.jest.config.js",
    "fixture:allure": "npx jest --config=fixture-allure.jest.config.js",
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "lint:staged": "lint-staged",
    "start": "cd __fixtures__ && allure serve",
    "test": "jest",
    "test:ci": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/environment": "^28.1.2",
    "@jest/reporters": "^28.1.1",
    "@jest/types": "^28.1.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^28.1.3",
    "@types/lodash": "^4.14.186",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
