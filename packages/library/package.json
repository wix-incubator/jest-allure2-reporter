{
  "name": "jest-allure2-reporter",
  "version": "1.0.0",
  "description": "Idiomatic Jest reporter for Allure Framework",
  "license": "MIT",
  "keywords": [
    "allure",
    "allure2",
    "jest",
    "jest-reporter",
    "reporter"
  ],
  "authors": [
    "Yaroslav Serhieiev <yaroslavs@wix.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix-incubator/jest-allure2-reporter.git",
    "directory": "packages/reporter"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "!**/__*__",
    "!**/*.test.*"
  ],
  "scripts": {
    "build": "tsc",
    "docs": "typedoc",
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "test": "jest"
  },
  "devDependencies": {
    "@wix/eslint-config-jest-allure2-reporter": "^1.0.0",
    "@wix/jest-config-jest-allure2-reporter": "^1.0.0",
    "@wix/prettier-config-jest-allure2-reporter": "^1.0.0",
    "@wix/typescript-config-jest-allure2-reporter": "^1.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^14.18.46",
    "@types/rimraf": "^4.0.5",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.8.8",
    "tempfile": "^3.0.0",
    "typedoc": "^0.24.7"
  },
  "dependencies": {
    "@noomorph/allure-js-commons": "^2.3.0",
    "ci-info": "^3.8.0",
    "jest-metadata": "^1.0.0-beta.23",
    "pkg-up": "^3.1.0",
    "rimraf": "^4.3.1",
    "strip-ansi": "^6.0.0"
  },
  "prettier": "@wix/prettier-config-jest-allure2-reporter",
  "eslintConfig": {
    "extends": "@wix/jest-allure2-reporter"
  },
  "peerDependencies": {
    "jest": ">=27.2.5"
  },
  "browserslist": [
    "node 16"
  ]
}
